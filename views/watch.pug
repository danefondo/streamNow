extends layout

block content
    .streaming_area
        .stream_owner
            if (user.firstname)
                p #{user.firstname}
                if (user.lastname)
                    p #{user.lastname}
            else
                p #{user.username}
        .player_container
            iframe.live_player(width='800', height='480', src='https://www.youtube-nocookie.com/embed/' + video_id + '?modestbranding=1&showinfo=0&rel=0&theme=light&color=white', frameborder='0', allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')
        .player_sidebar_container
            .sidebar_section_top
                .hide_chat Hide chat
            iframe.live_chat(width='425px', height='600px', src='https://www.youtube.com/live_chat?v=' + video_id + '&embed_domain=stream-one.herokuapp.com') 

block scripts
    script(src='/js/live.js')
